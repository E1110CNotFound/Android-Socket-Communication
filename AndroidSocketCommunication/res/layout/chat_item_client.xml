<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <ImageView
        android:id="@+id/client_chat_item_head"
        android:layout_width="@dimen/chat_item_head_size"
        android:layout_height="@dimen/chat_item_head_size"
        android:layout_margin="@dimen/chat_item_head_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_client"
        android:contentDescription="@string/identify_client" />
    
    <TextView
        android:id="@+id/client_chat_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/chat_item_width"
        android:minHeight="@dimen/chat_item_head_size"
		android:layout_marginTop="@dimen/chat_item_margin"
		android:layout_marginBottom="@dimen/chat_item_margin"
		android:layout_toEndOf="@id/client_chat_item_head"
		android:layout_toRightOf="@id/client_chat_item_head"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:background="@drawable/bg_chat_item_client"
        android:textSize="@dimen/chat_item_text_size"
        android:textColor="@android:color/white" />
    
</RelativeLayout>